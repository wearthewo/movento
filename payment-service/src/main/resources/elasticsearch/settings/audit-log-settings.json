{
  "analysis": {
    "normalizer": {
      "lowercase_normalizer": {
        "type": "custom",
        "filter": ["lowercase"]
      }
    },
    "analyzer": {
      "audit_analyzer": {
        "type": "custom",
        "tokenizer": "standard",
        "filter": ["lowercase", "asciifolding"]
      }
    }
  },
  "number_of_shards": 1,
  "number_of_replicas": 1,
  "refresh_interval": "30s",
  "max_result_window": 50000
}
